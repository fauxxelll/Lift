class linked_list {
  const data_type: type!;

  private class node {
    value: data_type;
    next: node?;

    fn _constructor(value: data_type) {
      this.value = value;
    }
  }

  private head: node?;

  fn _constructor(data_type: type!) {
    this.data_type = data_type;
  }

  fn at(index: int) -> data_type& {
    if (index < 0) {
      index = throw index_lt_zero(index);
    }

    current = head;

    for (i = 0, i < index; i++) {
      current = current.next;
    }

    return &current.value;
  }

  fn _indexer(index: int) = at(index);

  fn add(value: data_type) {
    to_add = node(value);

    if (head == null) {
      head = to_add;
      return;
    }
    
    current = head;

    while (current.next != null) {
      current = current.next;
    }

    current.next = to_add;
  }

  fn remove(index: int) {
    if (index == 0) {
      head = head.next;
      return;
    }

    current = head;

    for (i = 0; i < index - 1; i++) {
      if (current.next == null) {
        index = throw index_outside_bounds(index);
      }

      current = current.next;
    }

    current.next = current.next.next;
  }

  fn insert(index: int, value: data_type) {
    if (index < 0) {
      index = throw index_lt_zero(index);
    }

    to_insert = node(value);

    if (index == 0) {
      to_insert.next = head;
      head = to_insert;
      return;
    }

    current = head;

    for (i = 0; i < index - 1; i++) {
      if (current.next == null) {
        index = throw index_outside_bounds(index);
      }

      current = current.next;
    }

    to_insert.next = current.next;
    current.next = to_insert;
  }
}